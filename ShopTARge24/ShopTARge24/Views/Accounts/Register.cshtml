@model ShopTARge24.Models.Accounts.RegisterViewModel

<h1>Register account</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <div>
            <div class="form-group row">
                <label class="col-form-label col-2" asp-for="Email"></label>
                <div class="form-control col-3">
                    <input  asp-for="Email" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" asp-for="Name"></label>
                <div class="form-control col-3">
                    <input  asp-for="Name" required/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" asp-for="Password"></label>
                <div class="form-control col-3">
                    <input  asp-for="Password" type="password" required/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" asp-for="ConfirmPassword"></label>
                <div class ="form-control col-3">
                    <input  asp-for="ConfirmPassword" type="password" required/>
                </div>
                
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" asp-for="City"></label>
                <div class ="form-control col-3">
                    <input  asp-for="City" />
                </div>
            </div>
            <input asp-action="register" asp-controller="Accounts" type="submit" class="btn btn-success col-sm-2" value="Register" />
        </div>
        
    </div>
</form>