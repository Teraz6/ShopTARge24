@model IEnumerable<ShopTARge24.Models.Kindergarten.KindergartenIndexViewModel>

@{
    int rowNumber = 1;
}


<div class="mb-3">
	<a asp-action="create" asp-controller="Kindergarten" type="submit" class="btn btn-primary">Create</a>
</div>

<div class="h1">
	Kindergarten
</div>
<form method="get">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Kindergarten Name</th>
                <th scope="col">Group Name</th>
                <th scope="col">Teacher Name</th>
                <th scope="col">Children Count</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarten in Model)
            {
                <tr>
                    <td>@kindergarten.Id</td>
                    <td>@kindergarten.KindergartenName</td>
                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.TeacherName</td>
                    <td>@kindergarten.ChildrenCount</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="details" asp-controller="kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-primary btn-sm">Details</a>
                            <a asp-action="update" asp-controller="kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Delete" asp-controller="Kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-danger btn-sm">Delete</a>
                           @*  <form asp-action="delete" asp-route-id="@kindergarten.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form> *@
                        </div>
                       
                        @* <a asp-action="delete" asp-controller="kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-outline-danger">Delete</a> *@
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>