@model ShopTARge24.Models.Accounts.ChangePasswordViewModel


<h1>Change Password</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <div class="form-group row">
            <label class="col-form-label col-2" asp-for="CurrentPassword">Current Password</label>
            <input class="form-control" asp-for=CurrentPassword type="password" required/>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-2" asp-for="NewPassword">New Password</label>
            <input class="form-control" asp-for="NewPassword" type="password" required/>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-2" asp-for="ConfirmNewPassword">Confirm New Password</label>
            <input class="form-control" asp-for="ConfirmNewPassword" type="password" required/>
        </div>
        <input asp-action="ChangePassword" asp-controller="Accounts" type="submit" class="btn btn-success col-sm-2 m-2" value="Change password"/>
    </div>
</form>

