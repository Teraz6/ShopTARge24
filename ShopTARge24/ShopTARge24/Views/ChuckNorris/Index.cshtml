@model ShopTARge24.Models.ChuckNorris.ChuckNorrisViewModel

<h1>Search City</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <h2>Press button for Chuck Norris</h2>
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="ChuckNorris" asp-action="GetNorrisFacts" class="btn btn-primary">Get Facts</button>
            </div>
        </div>
    </form>
    <hr />
    <dl class="row text-dark">
        <div>
            <dd class="col-sm-10">
				<img src="@Html.DisplayFor(model => model.IconUrl)" />
			</dd>
            <dt class="col-sm-2">
                Joke:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Value) °C
            </dd>
        </div>
    </dl>
</div>