@model ShopTARge24.Models.AccuWeathers.AccuWeathersSearchViewModel

<h1>Get a weather reports of your desired city.</h1>

<div class="container">
    <form method="post">
        <div class="container my-2">
            <div class="form-group col-md-offset-3 col-md-5">
                <label style="font: Arial">Insert a city name</label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container my-2">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="accuWeathers" asp-action="searchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>